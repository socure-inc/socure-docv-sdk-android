<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">#FF6900</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">#F3992D</item>
        <item name="android:colorControlActivated">#F3992D</item>
        <item name="android:colorForeground">#fff</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    //**********CONFIGURABLE

    <style name="ScannerBackIcon">
        <item name="srcCompat">@drawable/ic_arrow_left</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ScannerTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ScannerHelpIcon">
        <item name="srcCompat">@drawable/ic_baseline_help_outline_24</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ScannerFlashIcon">
        <item name="srcCompat">@drawable/ic_disabled_flash</item>
        <item name="android:padding">8dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ScannerTabStyle">
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/orange</item>
        <item name="tabIndicatorColor">@color/orange</item>
    </style>

    <style name="ScannerTabItemStyle">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="PassportScannerMaskStyle">
        <item name="android:background">@drawable/white_border_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PassportScannerMaskBottomStyle">
        <item name="android:background">@drawable/white_border_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PassportScannerMaskBackgroundStyle">
        <item name="android:background">@color/mask_background</item>
    </style>

    <style name="LicenseScannerMaskStyle">
        <item name="android:background">@drawable/white_border_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LicenseScannerMaskBackgroundStyle">
        <item name="android:background">@color/mask_background</item>
    </style>

    <style name="LicenseScannerMaskTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ManualButtonStyle">
        <item name="android:src">@drawable/ic_baseline_photo_camera_24</item>
    </style>

    <style name="CountDownPhotoCaptureStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MySpinKitStyle" parent="@style/SpinKitView.Large.Circle">
        <item name="SpinKit_Color">@color/grey</item>
    </style>

    <style name="ScannerStatusBarCapture">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ArrowUpIcon">
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_arrow_up</item>
    </style>

    <style name="LicenseBackHelpTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LicenseBackHelpTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LicenseBackHelpImage">
        <item name="android:src">@drawable/license_mask_back</item>
    </style>

    <style name="LicenseFrontHelpTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LicenseFrontHelpTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LicenseFrontHelpImage">
        <item name="android:src">@drawable/license_mask_front</item>
    </style>

    <style name="PassportHelpTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PassportHelpTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PassportHelpImage">
        <item name="android:background">@drawable/passport_mask</item>
    </style>

    <style name="SelfieHelpTitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SelfieHelpTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SelfieHelpImage">
        <item name="android:background">@drawable/ic_selfie</item>
    </style>

    <style name="CardViewHelpStyle">
        <item name="android:background">@drawable/bottom_card_background</item>
    </style>

    <style name="UploadScreen">
        <item name="android:background">@color/background</item>
    </style>

    <style name="ProgressBarValueStyle">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">31sp</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progress">1</item>
        <item name="android:progressBackgroundTint">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:progressTint">@color/orange</item>
        <item name="android:secondaryProgressTint">@color/orange</item>
        <item name="android:secondaryProgressTintMode">screen</item>
    </style>

    <style name="PreviewStart">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PreviewStart.AcceptImage">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:background">@drawable/ic_baseline_check_circle_24</item>
    </style>

    <style name="PreviewStart.CancelImage">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:background">@drawable/ic_baseline_cancel_24</item>
    </style>

    <style name="PreviewStart.InformationExtracted">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

    <style name="PreviewStart.InformationExtractedIcon">
        <item name="android:background">@drawable/ic_baseline_check_circle_24</item>
    </style>

    // consent feature related styles
    <style name="socure_consent_title">
        <item name="fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/socure_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="socure_small_regular_text">
        <item name="fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/socure_dark_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="socure_btn_orange_bg" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="theme">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="contentPadding">2dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/btn_socure_orange_bg</item>
        <item name="android:textColor">@color/socure_white</item>
    </style>

    <style name="socure_btn_orange_stoke" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="theme">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/btn_socure_orange_corner</item>
        <item name="android:textColor">@color/socure_title_text</item>
    </style>
    //****** CONFIGURABLE
</resources>
